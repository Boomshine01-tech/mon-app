        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 15px;
        padding: 1.5rem 2rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        min-width: 150px;
    }

    .stat-item i {
        font-size: 2rem;
        color: #3b82f6;
    }

    .stat-value {
        display: block;
        font-size: 2rem;
        font-weight: 700;
        color: white;
        line-height: 1;
    }

    .stat-label {
        display: block;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.8);
        margin-top: 0.25rem;
    }

    .devices-content {
        max-width: 1400px;
        margin: 0 auto;
    }

    .loading-state, .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
