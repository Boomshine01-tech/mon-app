@page "/devices"
@attribute [Authorize]
@using SmartNest.Client.Services
@inject IDeviceService DeviceService
@inject NotificationService NotificationService
@inject ILogger<Devices> Logger
@implements IAsyncDisposable

<PageTitle>Appareils - SmartNest</PageTitle>

<div class="devices-wrapper">
    <div class="devices-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-plug"></i>
                Panneau de contr√¥le <span class="accent">SmartNest</span>
            </h1>
            <p class="page-description">
                Surveillez et contr√¥lez en temps r√©el vos √©quipements connect√©s
            </p>
        </div>

        @if (!isLoading && devices.Any())
        {
            <div class="stats-bar">
                <div class="stat-item">
                    <i class="fas fa-check-circle"></i>
                    <div>
                        <span class="stat-value">@devices.Count(d => d.IsActive)</span>
                        <span class="stat-label">Actifs</span>
                    </div>
                </div>

                <div class="stat-item">
                    <i class="fas fa-times-circle"></i>
                    <div>
                        <span class="stat-value">@devices.Count(d => !d.IsActive)</span>
                        <span class="stat-label">Inactifs</span>
                    </div>
                </div>

                <div class="stat-item">
                    <i class="fas fa-layer-group"></i>
                    <div>
                        <span class="stat-value">@devices.Count</span>
                        <span class="stat-label">Total</span>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="devices-content">
        @if (isLoading)
        {
            <div class="loading-state">
                <div class="spinner">
                    <i class="fas fa-spinner fa-spin"></i>
                </div>
                <p>Chargement des appareils...</p>
            </div>
        }
        else if (!devices.Any())
        {
            <div class="empty-state">
                <div class="empty-icon"><i class="fas fa-plug"></i></div>
                <h3>Aucun appareil connect√©</h3>
                <p>Vos appareils appara√Ætront ici une fois connect√©s au syst√®me</p>
            </div>
        }
        else
        {
            <div class="devices-grid">
                @foreach (var device in devices)
                {
                    <div class="device-card @(device.IsActive ? "active" : "inactive")" @onclick="() => ToggleDevice(device)">
                        <div class="device-header">
                            <div class="device-icon @GetDeviceColorClass(device.DeviceType)">
                                <i class="@device.DeviceIcon"></i>
                            </div>
                            <div class="device-status">
                                <span class="status-badge @(device.IsActive ? "on" : "off")">
                                    <span class="status-dot"></span>
                                    @(device.IsActive ? "ACTIF" : "INACTIF")
                                </span>
                            </div>
                        </div>

                        <div class="device-body">
                            <h3 class="device-name">@device.DeviceName</h3>
                            <p class="device-type">@device.DeviceType</p>
                        </div>

                        <div class="device-footer">
                            <div class="last-update">
                                <i class="fas fa-clock"></i>
                                <span>@device.FormattedTimeSinceChange</span>
                            </div>
                            <button class="toggle-btn" @onclick:stopPropagation="true" @onclick="() => ToggleDevice(device)">
                                <i class="fas @(device.IsActive ? "fa-power-off" : "fa-play")"></i>
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@code {
    private List<DeviceModel> devices = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Logger.LogInformation("üöÄ Initializing Devices page...");
            await LoadDevicesAsync();
            await DeviceService.ConnectToRealtimeUpdatesAsync(OnDeviceUpdatedFromSignalR);
            Logger.LogInformation("‚úÖ Devices page initialized");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "‚ùå Error initializing Devices page");
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Erreur",
                Detail = "Erreur lors de l'initialisation"
            });
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadDevicesAsync()
    {
        try
        {
            Logger.LogInformation("üì° Loading devices...");
            devices = await DeviceService.GetDevicesAsync();
            Logger.LogInformation($"‚úÖ Loaded {devices.Count} devices");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "‚ùå Error loading devices");
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Erreur",
                Detail = "Impossible de charger les appareils"
            });
        }
    }

    private async Task ToggleDevice(DeviceModel device)
    {
        try
        {
            Logger.LogInformation($"üîÑ Toggling device {device.DeviceId}");
            var newState = !device.IsActive;
            var success = await DeviceService.ToggleDeviceAsync(device.DeviceId, newState);

            NotificationService.Notify(new NotificationMessage
            {
                Severity = success ? NotificationSeverity.Success : NotificationSeverity.Error,
                Summary = success ? "Succ√®s" : "Erreur",
                Detail = success ? $"{device.DeviceName} {(newState ? "activ√©" : "d√©sactiv√©")}" : "√âchec de la modification"
            });
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"‚ùå Error toggling device {device.DeviceId}");
            NotificationService.Notify(new NotificationMessage
            {
                Severity = NotificationSeverity.Error,
                Summary = "Erreur",
                Detail = $"Erreur: {ex.Message}"
            });
        }
    }

    private void OnDeviceUpdatedFromSignalR()
    {
        Logger.LogInformation("üì© Device update received from SignalR");
        InvokeAsync(StateHasChanged);
    }

    private string GetDeviceColorClass(string deviceType)
    {
        return deviceType switch
        {
            "Fan" => "fan-color",
            "HeatLamp" => "heatlamp-color",
            "Feeder" => "feeder-color",
            "WaterDispenser" => "water-color",
            _ => "default-color"
        };
    }

    public async ValueTask DisposeAsync()
    {
        Logger.LogInformation("üîå Disconnecting from SignalR...");
        await DeviceService.DisconnectFromRealtimeUpdatesAsync();
    }
}


<style>
    /* ==================== DEVICES PAGE STYLES ==================== */
   

    .devices-header {
        max-width: 1400px;
        margin: 0 auto 3rem;
    }

    .header-content {
        text-align: center;
        margin-bottom: 2rem;
        animation: fadeInDown 0.6s ease-out;
    }

    .page-title {
        font-size: 3rem;
        color: white;
        margin-bottom: 0.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
    }

    .page-title i {
        font-size: 2.5rem;
    }

    .page-title .accent {
        color: #3b82f6;
        text-shadow: 0 0 20px rgba(59, 130, 246, 0.6);
    }

    .page-description {
        font-size: 1.2rem;
        color: rgba(255, 255, 255, 0.9);
    }

    .stats-bar {
        display: flex;
        justify-content: center;
        gap: 2rem;
