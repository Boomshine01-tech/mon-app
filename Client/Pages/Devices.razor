    .spinner {
        font-size: 3rem;
        margin-bottom: 1rem;
        animation: pulse 1.5s ease-in-out infinite;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 1.5rem;
        opacity: 0.6;
    }

    .empty-state h3 {
        font-size: 1.8rem;
        margin-bottom: 0.5rem;
    }

    .empty-state p {
        font-size: 1.1rem;
        opacity: 0.8;
    }

    .devices-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
        animation: fadeIn 0.6s ease-out;
    }

    .device-card {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 1.5rem;
        cursor: pointer;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
    }

    .device-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #64748b, #475569);
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    .device-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(100, 116, 139, 0.3);
    }

    .device-card:hover::before {
        transform: scaleX(1);
    }

    .device-card.active {
        border: 2px solid #10b981;
    }

    .device-card.inactive {
        border: 2px solid #e5e7eb;
    }

    .device-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
    }

    .device-icon {
        width: 60px;
        height: 60px;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.8rem;
        color: grey;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
    }

    .fan-color { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
    .heatlamp-color { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
    .feeder-color { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
    .water-color { background: linear-gradient(135deg, #0ea5e9 0%, #0284c7 100%); }
    .default-color { background: linear-gradient(135deg, #64748b 0%, #475569 100%); }

    .status-badge {
        padding: 0.5rem 1rem;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .status-badge.on {
        background: #d1fae5;
        color: #065f46;
    }

    .status-badge.off {
        background: #f1f5f9;
        color: #475569;
    }

    .status-dot {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        animation: pulse 2s ease-in-out infinite;
    }

    .status-badge.on .status-dot {
        background: #10b981;
    }

    .status-badge.off .status-dot {
        background: #94a3b8;
    }

    .device-body {
        margin-bottom: 1.5rem;
    }

    .device-name {
        font-size: 1.5rem;
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 0.5rem;
    }

    .device-type {
        color: #64748b;
        font-size: 0.95rem;
    }

    .device-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding-top: 1rem;
        border-top: 1px solid #e2e8f0;
    }

    .last-update {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        color: #64748b;
        font-size: 0.9rem;
    }

    .toggle-btn {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        border: none;
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
        font-size: 1.2rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
    }

    .toggle-btn:hover {
        transform: scale(1.1) rotate(90deg);
        box-shadow: 0 6px 20px rgba(59, 130, 246, 0.6);
    }

    /* ==================== ANIMATIONS ==================== */
    @@keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }

    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }
        50% {
            opacity: 0.7;
            transform: scale(1.1);
        }
    }

    /* ==================== RESPONSIVE ==================== */
    @@media (max-width: 768px) {
        .devices-wrapper {
            padding: 1rem;
        }

        .page-title {
            font-size: 2rem;
            flex-direction: column;
            gap: 0.5rem;
        }

        .stats-bar {
            gap: 1rem;
        }

        .stat-item {
            min-width: 120px;
            padding: 1rem 1.5rem;
        }

        .devices-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }
    }
</style>