@page "/"
@attribute [Authorize]
@inject NavigationManager NavigationManager

<PageTitle>Accueil - SmartNest</PageTitle>

<div class="home-wrapper">
    <div class="hero-section">
        <div class="hero-content">
            <div class="logo-container">
                <i class="fas fa-egg"></i>
            </div>
            <h1 class="hero-title">
                SMART<span class="accent">NEST</span>
            </h1>
            <p class="hero-subtitle">
                Système intelligent de gestion à distance de poulailler
            </p>
            <div class="hero-description">
                <p>Surveillez et contrôlez votre poulailler en temps réel, où que vous soyez</p>
            </div>
        </div>

        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon temperature">
                    <i class="fas fa-temperature-high"></i>
                </div>
                <h3>Température</h3>
                <p>Contrôle précis et automatique de la température ambiante</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon humidity">
                    <i class="fas fa-tint"></i>
                </div>
                <h3>Humidité</h3>
                <p>Régulation optimale pour le confort de vos animaux</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon dust">
                    <i class="fas fa-wind"></i>
                </div>
                <h3>Qualité de l'air</h3>
                <p>Surveillance continue des particules en suspension</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon devices">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3>Équipements</h3>
                <p>Gestion intelligente de tous vos dispositifs connectés</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon realtime">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>Temps réel</h3>
                <p>Données instantanées et notifications immédiates</p>
            </div>

            <div class="feature-card">
                <div class="feature-icon analytics">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>Analyses</h3>
                <p>Historiques détaillés et rapports personnalisés</p>
            </div>
        </div>

        <div class="cta-section">
            <button class="cta-button primary" @onclick="GoToDashboard">
                <i class="fas fa-chart-pie"></i>
                <span>Accéder au tableau de bord</span>
            </button>
            <button class="cta-button secondary" @onclick="GoToDevices">
                <i class="fas fa-plug"></i>
                <span>Gérer les appareils</span>
            </button>
        </div>
    </div>
</div>

@code{

    private void GoToDashboard(){
        NavigationManager.NavigateTo("/dashboard");

    }


    private void GoToDevices(){
        NavigationManager.NavigateTo("/devices");

    }

}
<style>
    /* ==================== HOME PAGE STYLES ==================== */

    .hero-section {
        max-width: 1400px;
        margin: 0 auto;
        padding: 3rem 0;
    }

    .hero-content {
        text-align: center;
        margin-bottom: 4rem;
        animation: fadeInUp 0.8s ease-out;
    }

    .logo-container {
        width: 100px;
        height: 100px;
        margin: 0 auto 2rem;
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(10px);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 3rem;
        color: white;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
        animation: float 3s ease-in-out infinite;
    }

    .hero-title {
        font-size: 4.5rem;
        font-weight: 800;
        color: white;
        margin-bottom: 1rem;
        letter-spacing: -2px;
        text-shadow: 0 2px 20px rgba(0, 0, 0, 0.2);
    }

    .hero-title .accent {
        color: #3b82f6;
        text-shadow: 0 0 30px rgba(59, 130, 246, 0.6);
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: rgba(255, 255, 255, 0.95);
        margin-bottom: 1rem;
        font-weight: 300;
    }

    .hero-description {
        max-width: 600px;
        margin: 0 auto;
    }

    .hero-description p {
        font-size: 1.1rem;
        color: rgba(255, 255, 255, 0.85);
        line-height: 1.8;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.12);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        animation: fadeInUp 0.8s ease-out backwards;
    }

    .feature-card:nth-child(1) { animation-delay: 0.1s; }
    .feature-card:nth-child(2) { animation-delay: 0.2s; }
    .feature-card:nth-child(3) { animation-delay: 0.3s; }
    .feature-card:nth-child(4) { animation-delay: 0.4s; }
    .feature-card:nth-child(5) { animation-delay: 0.5s; }
    .feature-card:nth-child(6) { animation-delay: 0.6s; }

    .feature-card:hover {
        transform: translateY(-10px);
        background: rgba(255, 255, 255, 0.18);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
        border-color: rgba(59, 130, 246, 0.5);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
    }

    .feature-icon.temperature { background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%); }
    .feature-icon.humidity { background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%); }
    .feature-icon.dust { background: linear-gradient(135deg, #10b981 0%, #059669 100%); }
    .feature-icon.devices { background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%); }
    .feature-icon.realtime { background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%); }
    .feature-icon.analytics { background: linear-gradient(135deg, #ec4899 0%, #db2777 100%); }

    .feature-card h3 {
        font-size: 1.5rem;
        color: white;
        margin-bottom: 0.75rem;
        font-weight: 600;
    }

    .feature-card p {
        font-size: 1rem;
        color: rgba(255, 255, 255, 0.8);
        line-height: 1.6;
    }

    .cta-section {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        animation: fadeInUp 1s ease-out backwards;
        animation-delay: 0.7s;
    }

    .cta-button {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1.25rem 2.5rem;
        font-size: 1.1rem;
        font-weight: 600;
        border: none;
        border-radius: 50px;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

    .cta-button.primary {
        background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        color: white;
    }

    .cta-button.primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 40px rgba(59, 130, 246, 0.5);
    }

    .cta-button.secondary {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 2px solid white;
    }

    .cta-button.secondary:hover {
        background: rgba(255, 255, 255, 0.3);
        transform: translateY(-3px);
    }

    .cta-button i {
        font-size: 1.2rem;
    }

    /* ==================== ANIMATIONS ==================== */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    /* ==================== RESPONSIVE ==================== */
    @@media (max-width: 768px) {
        .home-wrapper {
            padding: 1rem;
        }

        .hero-title {
            font-size: 3rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .cta-section {
            flex-direction: column;
        }

        .cta-button {
            width: 100%;
            justify-content: center;
        }
    }
</style>